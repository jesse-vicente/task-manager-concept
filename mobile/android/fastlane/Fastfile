default_platform(:android)

platform :android do
  app_project_dir = '**/app'

  lane :commit_and_push_version_bump do
    commit_android_version_bump(force: true)
    push_to_git_remote
  end

  lane :version_bump do |options|
    flavor = options[:flavor] || 'tupinamba'
    bump_type = options[:bump_type] || 'patch'

    increment_version_code(
      app_project_dir: app_project_dir,
      flavor: flavor,
    )

    increment_version_name(
      app_project_dir: app_project_dir,
      flavor: flavor,
      bump_type: bump_type,
    )
  end

  lane :build do |options|
    task = options[:task] || 'assemble'
    flavor = options[:flavor] || 'tupinamba'
    bump_type = options[:bump_type] || 'patch'

    version_bump(
      flavor: flavor,
      bump_type: bump_type,
    )

    commit_and_push_version_bump

    # gradle(
    #   task: task,
    #   flavor: flavor,
    #   build_type: 'Release',
    # )
  end
end